+  browser.removeEventListener("DOMContentLoaded", onLoad, false);
+  openConsole();
+
+  try {
+    testCreateCommands();
+    testCallCommands();
+    testRemoveCommands();
+  }
+  catch (ex) {
+    console.error(ex);
+  }
